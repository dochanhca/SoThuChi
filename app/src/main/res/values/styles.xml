<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_text_normal" parent="wrap_content">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_gray</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabBackground">@color/tab_gray</item>
        <item name="android:selectableItemBackground">@color/tab_gray</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_border">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="linear_custom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_linear_border</item>
        <item name="android:layout_marginTop">@dimen/ll_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/ll_margin_bot</item>
        <item name="android:layout_marginLeft">@dimen/ll_margin_lr</item>
        <item name="android:layout_marginRight">@dimen/ll_margin_lr</item>
    </style>

    <style name="text_note_normal">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_note_detail" parent="text_note_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginRight">@dimen/margin_5dp</item>
        <item name="android:paddingRight">@dimen/text_note_small_padding</item>
    </style>

    <style name="linear_custom_chil">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_linear_child</item>
        <item name="android:layout_marginTop">@dimen/ll_margin_top_2</item>
        <item name="android:layout_marginBottom">@dimen/ll_margin_bot_3</item>
        <item name="android:layout_marginLeft">@dimen/ll_margin_lr_5</item>
        <item name="android:layout_marginRight">@dimen/ll_margin_lr_5</item>
        <item name="android:paddingTop">@dimen/ll_margin_top_2</item>
        <item name="android:paddingBottom">@dimen/ll_margin_bot_3</item>
        <item name="android:paddingLeft">@dimen/ll_margin_lr_5</item>
        <item name="android:paddingRight">@dimen/ll_margin_lr_5</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="edt_note">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        
    </style>

    <style name="multiline_edittext">
        <item name="android:lines">5</item>
        <item name="android:minLines">4</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:background">@drawable/bg_edt_multiline</item>
    </style>

    <style name="text_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_btn_header_selected</item>
    </style>

    <style name="btn_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edt_single_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txt_list_pay_group" parent="wrap_content">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
    </style>

    <style name="txt_list_pay_child" parent="wrap_content">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
    </style>

    <style name="dividen_tab">
        <item name="android:background">@color/super_dark_gray</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <dimen name="text_note_small_padding">3dp</dimen>
</resources>
