<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Normal-->
    <item android:state_pressed="false" android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- Set màu nền -->
            <solid android:color="@android:color/white"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray"></stroke>
            <!-- các thuộc tính căn chỉnh -->
            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
    <!--Selected but not pressed-->
    <item android:state_pressed="false" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- Set màu nền -->
            <solid android:color="@color/bg_gray"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray"></stroke>
            <!-- các thuộc tính căn chỉnh -->
            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>

    <!--pressed-->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- Set màu nền -->
            <solid android:color="@color/bg_gray"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray"></stroke>
            <!-- các thuộc tính căn chỉnh -->
            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="4dp"></corners>
        </shape>
    </item>
</selector>