<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- Set màu nền -->
            <solid android:color="@color/btn_write_cyan"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@color/btn_write_cyan"></stroke>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="3dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- Set màu nền -->
            <solid android:color="@color/header_blue"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@color/header_blue"></stroke>

            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="3dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- Set màu nền -->
            <solid android:color="@color/header_blue"></solid>
            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@color/header_blue"></stroke>
            <!-- và đây là bán kính đường tròn ở 4 góc -->
            <corners android:radius="3dp"></corners>
        </shape>
    </item>
</selector>