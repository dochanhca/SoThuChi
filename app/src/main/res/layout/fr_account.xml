<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_account"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/tab_layout_height"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_list_account"
        android:background="@color/header_blue"
        android:layout_height="@dimen/header_height"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:gravity="center"
            android:id="@+id/img_back"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:background="@drawable/bg_btn_header_selected"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            style="@style/text_header"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/account" />

        <ImageView
            android:gravity="center"
            android:id="@+id/img_add"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:background="@drawable/bg_btn_header_selected"
            android:src="@drawable/ic_add_account" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_below="@+id/ll_list_account"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"></ListView>


    <LinearLayout
        android:background="@color/tab_gray"
        android:id="@+id/ll_sum_money"
        android:layout_alignParentBottom="true"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <View
            android:background="@android:color/darker_gray"
            android:layout_above="@+id/ll_sum_money"
            android:layout_height="0.7dp"
            android:layout_width="match_parent" />

        <TextView
            android:gravity="center"
            android:id="@+id/txt_sum"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="TÀI KHOẢN"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_above="@+id/ll_sum_money"-->
        <!--android:layout_height="@dimen/tab_layout_height"-->
        <!--android:layout_width="match_parent" />-->

</RelativeLayout>