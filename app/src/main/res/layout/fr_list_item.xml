<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50.7dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_gravity="center"
        android:background="@color/header_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/bg_btn_header_selected"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_5dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/txt_spending_parent_title"
            style="@style/text_header"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/spending_item_parent"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn_header_selected"
            android:gravity="center"
            android:src="@drawable/ic_add_account" />
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>