            android:textColor="@android:color/black"
            android:text="10000đ"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"></View>


</LinearLayout>