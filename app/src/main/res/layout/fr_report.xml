            android:layout_marginTop="3dp"
            android:layout_below="@id/txt_pay_year"
            android:layout_toRightOf="@+id/txt_pay_year"
            android:textSize="@dimen/small_size"
            android:textColor="@android:color/black"
            android:text="10000đ"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"></View>

    <RelativeLayout
        android:id="@+id/rl_sum"
        android:background="@drawable/bg_list_item"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_calendar_sum"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:src="@drawable/total" />
        <TextView
            android:id="@+id/txt_calendar_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/img_calendar_sum"
            android:textSize="@dimen/small_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Tổng thu - chi = 1000000"/>
        <TextView
            android:id="@+id/txt_pay_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_below="@id/txt_calendar_sum"
            android:layout_toRightOf="@+id/img_calendar_sum"
            android:textSize="@dimen/small_size"
            android:textColor="@color/header_dialog_blue"
            android:text="Thu:"/>
        <TextView
            android:id="@+id/txt_pay_money_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_below="@id/txt_calendar_sum"
            android:layout_toRightOf="@+id/txt_pay_sum"
            android:textSize="@dimen/small_size"
            android:textColor="@color/header_dialog_blue"
            android:text="10000đ"/>

        <TextView
            android:id="@+id/txt_receive_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txt_pay_sum"
            android:layout_toRightOf="@+id/img_calendar_sum"
            android:textSize="@dimen/small_size"
            android:textColor="@android:color/black"
            android:text="Chi:"/>
        <TextView
            android:id="@+id/txt_receive_money_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txt_pay_sum"
            android:layout_toRightOf="@+id/txt_pay_sum"
